        end
        methodWriter:VisitMethodInvoke(opcodes:GetInvokeStatic(), "plugins/quorum/Libraries/Language/Types/Boolean", "ConvertBooleanObjectToBoolean",
                "(Lquorum/Libraries/Language/Types/Boolean$Interface;)Z", false)
