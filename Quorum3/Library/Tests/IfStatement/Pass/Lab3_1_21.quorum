class Main
    action Main
        integer numberOfCars = 21
        integer price = 0

        if numberOfCars <= 0
            numberOfCars = 1
            output "Error: numberOfCars set to 1"
        elseif numberOfCars > 20
            numberOfCars = 20
            output "Error: numberOfCars set to 20"
        end
        if numberOfCars = 1
            price = 20000
        elseif numberOfCars = 2
            price = 19950 * 2
        elseif numberOfCars = 3
            price = 19900 * 3
        else
            price = 19800 * numberOfCars
        end
        output price
    end
end